{
    # Enable automatic HTTPS for localhost
    # Use internal CA for local development to avoid browser warnings (requires installing root CA)
    # or just accept self-signed warnings for now.
    local_certs
}

localhost {
    # Protected Admin Routes
    @admin_routes {
        path /metrics* /admin* /ingest* /grafana*
    }

    # Protect admin and metrics with Basic Authentication
    # Default User: admin
    # Default Pass: admin (Change this hash in production!)
    # Hash generated with: caddy hash-password --plaintext admin
    basic_auth @admin_routes {
        admin $2a$14$1l.IcnWz33s.i/l/g.e.UO.t/4s.g/s.g/s/s/s/s/s/s/s/s
    }

    # Reverse proxy to the API service
    reverse_proxy api:8000

    # Reverse proxy to Grafana
    reverse_proxy /grafana* grafana:3000

    # formatting logs
    log {
        output stdout
        format json
    }

    # Security Headers
    header {
        # HSTS (Strict-Transport-Security) - 1 year
        Strict-Transport-Security "max-age=31536000;"

        # Prevent MIME type sniffing
        X-Content-Type-Options "nosniff"

        # Prevent clickjacking
        X-Frame-Options "DENY"

        # XSS Protection (Legacy but good practice)
        X-XSS-Protection "1; mode=block"

        # Referrer Policy
        Referrer-Policy "strict-origin-when-cross-origin"
    }
}
